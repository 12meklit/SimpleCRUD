@model IEnumerable<student>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="student" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new student
            </a>
        </div>
    </div>

</div>
<br />
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                Gender
            </th>
            <th>
                phone
            </th>
            <th>
                Addres
            </th>
            <th>

            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var ob in Model)
        {
            <tr>
                <td width="20%">
                    @ob.FullName
                </td>
                <td width="20%">
                    @ob.Gender
                </td>
                <td width="20%">
                    @ob.phone
                </td>
                <td width="20%">
                    @ob.Address
                </td>
                <td>
                    <div class="w=75" btn-group" role="group">
                        <a asp-controller="student" asp-action="Edit" asp-route-id="@ob.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>

                        <a asp-controller="student" asp-action="Delete" asp-route-id="@ob.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>